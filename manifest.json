{
    "manifest_version": 2,

    "name": "Global pinned tabs",
    "description": "Global pinned tabs",
    "version": "1.0",

    "permissions": [
        "tabs",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "utils.js",
            "periodicExecutor.js",
            "multiDelegate.js",
            "chrome.js",
            "globallyPinnedTab.js",
            "globallyPinnedTabs.js",
            "storage.js",
            "arrayExtensions.js",
            "background.js"
        ],
        "persistent": false
    }
}